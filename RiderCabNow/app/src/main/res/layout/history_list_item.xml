<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/taxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:textSize="24sp"
                android:textColor="#000"
                android:drawableStart="@drawable/ic_local_taxi_24dp"
                android:layout_margin="10dp"
                android:drawablePadding="3dp"/>

            <TextView
                android:id="@+id/tvHistPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-52"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="#C50F0F"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"/>

            <TextView
                android:id="@+id/tvHistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taxi"
                android:text="Driver name"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:drawableStart="@drawable/ic_person_pin_blue_24dp"
                android:drawablePadding="3dp"
                android:maxLength="20" />

            <TextView
                android:id="@+id/tvHistRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="24sp"
                android:textColor="#000"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_below="@+id/tvHistPrice"
                android:drawableEnd="@drawable/ic_star_gold_24dp"
                android:drawablePadding="1dp"/>

            <TextView
                android:id="@+id/tvHistDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination name"
                android:textSize="26sp"
                android:textColor="#3C3A3A"
                android:layout_below="@+id/tvHistName"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_location_on_green_24dp"
                android:drawablePadding="3dp"
                android:maxLines="1"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>